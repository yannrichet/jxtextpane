
<project name="JXTextPane" default="dist" basedir=".">
    <property name="src" location="src" />
    <property name="build" location="build" />
    <property name="dist" location="dist" />
    <property name="tmp" location="tmp" />
    <property name="lib" location="lib" />
    <property name="test" location="test" />

    <target name="clean" description="clean up">
        <delete dir="${build}" failonerror="false" />
    </target>

    <target name="clean-dist" description="clean up">
        <delete dir="${dist}" failonerror="false" />
    </target>

    <target name="init" depends="clean,clean-dist">
        <mkdir dir="${build}" />
        <mkdir dir="${dist}" />
        <mkdir dir="${dist}/lib" />
    </target>

    <target name="resource" depends="init">
        <copy todir="${dist}/lib">
            <fileset dir="${lib}">
                <include name="**" />
            </fileset>
        </copy>
    </target>

    <target name="compile" depends="init" description="compile the source ">
        <javac classpath="${lib}/swingx-1.6.jar" deprecation="true" target="1.6" srcdir="${src}" destdir="${build}" debug="true" />
    </target>

    <target name="dist" depends="init,resource,compile" description="generate the distribution" >
        <!--unjar dest="${build}">
            <fileset dir="${lib}">
                <include name="*.jar"/>
            </fileset>
        </unjar-->
        <jar jarfile="${dist}/${ant.project.name}.jar" basedir="${build}" />
    </target>

    <target name="test" depends="compile">
        <javac classpath="${lib}/swingx-1.6.jar:junit4.jar" deprecation="true" target="1.6" srcdir="${test}" destdir="${build}" debug="true" />
        <java  jvm="java" classpath="${build}:${lib}/swingx-1.6.jar:junit4.jar" classname="javax.swing.CodeEditTest" fork="true"  >
            <assertions>
                <enable/>
            </assertions>
        </java>
    </target>

    <target name="profile" depends="compile">
        <javac classpath="${lib}/swingx-1.6.jar:junit4.jar" deprecation="true" target="1.6" srcdir="${test}" destdir="${build}" debug="true" />
        <java  jvm="java" classpath="${build}:${lib}/swingx-1.6.jar:junit4.jar" classname="javax.swing.CodeEditTest" fork="true"  >
            <assertions>
                <enable/>
            </assertions>
            <jvmarg value="-agentpath:/home/richet/opt/netbeans-6.8/profiler3/lib/deployed/jdk16/linux/libprofilerinterface.so=/home/richet/opt/netbeans-6.8/profiler3/lib,5140" />
        </java>
    </target>

    <target name="doc">
        <javadoc sourcepath="${src}" destdir="doc"/>
    </target>

</project>
